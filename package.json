{
  "name": "gray-ghost-data-core",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite serve ./src",
    "start": "npm run start:frontend & npm run start:backend",
    "start:frontend": "npm --prefix frontend run start",
    "start:backend": "npm --prefix backend run start",
    "build": "npm --prefix frontend run build",
    "test": "npm --prefix frontend run test && npm --prefix backend run test",
    "lint": "npm --prefix frontend run lint && npm --prefix backend run lint"
  },
  "dependencies": {
    "vite": "^5.2.13",
    "dotenv": "^16.4.5",
    "axios": "^1.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "typescript": "^5.4.5",
    "eslint": "^9.4.0",
    "prettier": "^3.3.2",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint-config-prettier": "^9.1.0"
  },
  "workspaces": [
    "./src/frontend",
    "./src/backend"
  ]
}
